#!/usr/bin/env bash

SCRIPTDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
SRCDIR="$(dirname "$SCRIPTDIR")"
IMGSRCDIR="$SRCDIR/img"
LIBSRCDIR="$SRCDIR/lib"

LOCALBASE="$HOME/Library/texmf/tex/latex"

cp -pv $SRCDIR/dndbook.cls $LOCALBASE
cp -pv $SRCDIR/dnd-phb.sty $LOCALBASE
cp -pv $SRCDIR/dndcore.def $LOCALBASE
cp -pv $SRCDIR/dndoptions.clo $LOCALBASE
cp -pRv $IMGSRCDIR $LOCALBASE
cp -pRv $LIBSRCDIR $LOCALBASE
